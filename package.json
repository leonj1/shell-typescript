{
  "name": "shell-typescript",
  "version": "1.0.0",
  "description": "A hexagonal architecture shell for TypeScript applications",
  "private": true,
  "scripts": {
    "build": "pnpm --filter \"./packages/**\" build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:security": "jest --testPathPatterns=security --coverage",
    "test:integration": "jest --testPathPatterns=integration --coverage",
    "test:packages": "pnpm --filter \"./packages/**\" test",
    "dev": "pnpm --filter @shell/core dev",
    "cli": "pnpm --filter @shell/cli dev",
    "lint:test": "jest --listTests",
    "clean:coverage": "rm -rf coverage"
  },
  "keywords": [
    "shell",
    "typescript",
    "hexagonal-architecture",
    "dependency-injection"
  ],
  "author": "Shell Architecture Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "babel-jest": "^30.1.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-watch-typeahead": "^3.0.1",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  }
}
